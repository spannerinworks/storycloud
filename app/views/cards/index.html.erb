<h1>Listing cards</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Points</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cards.each do |card| %>
  <tr>
    <td><%= card.description %></td>
    <td><%= card.points %></td>
    <td><%= card.status %></td>
    <td><%= link_to 'Show', project_card_path(card.project, card) %></td>
    <td><%= link_to 'Edit', edit_project_card_path(card.project, card) %></td>
    <td><%= link_to 'Destroy', [card.project, card], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

